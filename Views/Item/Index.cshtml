@model IEnumerable<CommentApp.Models.Entities.Item>
@{
    ViewData["Title"] = "Список постов";
}

<h1>Список постов</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Дата создания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.User.UserName</td>
                <td>@item.CreationDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info" href="/Item/Details/@item.ItemId">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>